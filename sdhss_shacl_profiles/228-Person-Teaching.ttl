    sdh-shacl:sdh-edu_C1_Shape a sh:NodeShape ;
        sh:targetClass sdh-edu:C1 ;
        sh:name "Teaching" ;

        sh:property [
            sh:path rdfs:label ;
            sh:name "Label";
            sh:datatype xsd:string;
            sh:order 1;
            
            sh:maxCount 1;
            ];

        sh:property [
            sh:path rdfs:comment ;
            sh:name "Description";
            sh:datatype rdf:HTML;
            sh:order 2;
            
            ];  
            
        sh:property [
                sh:path sdh-edu:P6 ;
                sh:name "concerns";
                sh:class sdh-edu:C5 ;
                sh:order 3;
                ];
                        
        sh:property [
                sh:path sdh-edu:P7 ;
                sh:name "is carried out by";
                sh:class crm:E21 ;
                sh:order 4;sh:maxCount 1 ;
                ];
                        
        sh:property [
                sh:path sdh-edu:P8 ;
                sh:name "carried out at";
                sh:class crm:E74 ;
                sh:order 5;sh:maxCount 1 ;
                ];
                        
        sh:property [
                sh:path sdh-edu:P9 ;
                sh:name "has rank";
                sh:class sdh-edu:C7 ;
                sh:order 6;sh:maxCount 1 ;
                ];
                     
            
        sh:property [
            sh:path sdh-short:P1 ;
            sh:name "at some time within";
            sh:datatype xsd:string;
            sh:order 7;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P4 ;
            sh:name "begins on";
            sh:datatype xsd:string;
            sh:order 8;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P7 ;
            sh:name "ends on";
            sh:datatype xsd:string;
            sh:order 9;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P3 ;
            sh:name "begins after";
            sh:datatype xsd:string;
            sh:order 10;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P5 ;
            sh:name "begins before";
            sh:datatype xsd:string;
            sh:order 11;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P6 ;
            sh:name "ends after";
            sh:datatype xsd:string;
            sh:order 12;
            sh:maxCount 1;
            ];

        sh:property [
            sh:path sdh-short:P8 ;
            sh:name "ends before";
