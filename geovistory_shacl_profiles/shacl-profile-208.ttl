### SHACL OntoME Profile 208 



@prefix sdh-shacl: <https://sdhss.org/shacl/profiles/>. 
@prefix sh: <http://www.w3.org/ns/shacl#> .  
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: 	<http://www.w3.org/2000/01/rdf-schema#> .  
@prefix sdh-short: <https://sdhss.org/ontology/shortcuts/>.
        @prefix sdh-so: <https://ontome.net/ns/social-legal-economic-life/>.
@prefix crm: <http://www.cidoc-crm.org/cidoc-crm/>. 

sdh-shacl:sdh-so_C43_Shape a sh:NodeShape ;
    sh:targetClass sdh-so:C43 ;
    sh:name "Actor's Role in a Social Relationship" ;

    sh:property [
        sh:path rdfs:label ;
        sh:name "Label";
        sh:datatype xsd:string;
        sh:order 1;
        sh:minCount 1;
        sh:maxCount 1;
        ];

    sh:property [
        sh:path rdfs:comment ;
        sh:name "Description";
        sh:datatype rdf:HTML;
        sh:order 2;
        sh:minCount 1;
        ];   
    
       
            
        sh:property [
                sh:path sdh-so:P72 ;
                sh:name "has role quality";
                sh:class sdh-so:C2 ;
                sh:maxCount 1 ;
                ];
                    
        sh:property [
                sh:path sdh-so:P73 ;
                sh:name "is social relationship role of";
                sh:class crm:E21 ;
                sh:maxCount 1 ;
                ];
                    
        sh:property [
                sh:path sdh-so:P74 ;
                sh:name "is role within";
                sh:class sdh-so:C3 ;
                sh:maxCount 1 ;
                ];
                .