### SHACL OntoME Profile 180 



@prefix sdh-shacl: <https://sdhss.org/shacl/profiles/>. 
@prefix sh: <http://www.w3.org/ns/shacl#> .  
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: 	<http://www.w3.org/2000/01/rdf-schema#> .  
@prefix sdh-short: <https://sdhss.org/ontology/shortcuts/>.
        @prefix sdh: <https://sdhss.org/ontology/core/>.
@prefix crm: <http://www.cidoc-crm.org/cidoc-crm/>. 

sdh-shacl:crm_E21_Shape a sh:NodeShape ;
    sh:targetClass crm:E21 ;
    sh:name "Person" ;

    sh:property [
        sh:path rdfs:label ;
        sh:name "Label";
        sh:datatype xsd:string;
        sh:order 1;
        sh:minCount 1;
        sh:maxCount 1;
        ];

    sh:property [
        sh:path rdfs:comment ;
        sh:name "Description";
        sh:datatype rdf:HTML;
        sh:order 2;
        sh:minCount 1;
        ];   
    
            sh:property [
                sh:path sdh-short:P2 ;
                sh:name "has birth date";
                sh:datatype xsd:string;
                sh:maxCount 1;
                sh:order 3;
                ];
                
        
            . 

sdh-shacl:sdh_C15_Shape a sh:NodeShape ;
    sh:targetClass sdh:C15 ;
    sh:name "Epistemic Location of a Physical Thing" ;

    sh:property [
        sh:path rdfs:label ;
        sh:name "Label";
        sh:datatype xsd:string;
        sh:order 1;
        
        sh:maxCount 1;
        ];

    sh:property [
        sh:path rdfs:comment ;
        sh:name "Description";
        sh:datatype rdf:HTML;
        sh:order 2;
        
        ];   
    
    
                sh:property [
                sh:path sdh-short:P1 ;
                sh:name "Standard Date-Time";
                sh:datatype xsd:string;
                sh:maxCount 1;
                sh:order 3;
                ];
                    
                
        sh:property [
                sh:path sdh:P19 ;
                sh:name "has location type";
                sh:class sdh:C16 ;
                sh:maxCount 1 ;
                ];
                    
        sh:property [
                sh:path sdh:P17 ;
                sh:name "is location of";
                sh:class crm:E21 ;
                sh:maxCount 1 ;
                ];
                    
        sh:property [
                sh:path sdh:P15 ;
                sh:name "is location at";
                sh:class sdh:C13 ;
                sh:maxCount 1 ;
                ];
                . 

sdh-shacl:sdh_C13_Shape a sh:NodeShape ;
    sh:targetClass sdh:C13 ;
    sh:name "Geographical Place" ;

    sh:property [
        sh:path rdfs:label ;
        sh:name "Label";
        sh:datatype xsd:string;
        sh:order 1;
        sh:minCount 1;
        sh:maxCount 1;
        ];

    sh:property [
        sh:path rdfs:comment ;
        sh:name "Description";
        sh:datatype rdf:HTML;
        sh:order 2;
        sh:minCount 1;
        ];   
    
        
            . 

sdh-shacl:sdh_C16_Shape a sh:NodeShape ;
    sh:targetClass sdh:C16 ;
    sh:name "Epistemic Location Type" ;

    sh:property [
        sh:path rdfs:label ;
        sh:name "Label";
        sh:datatype xsd:string;
        sh:order 1;
        sh:minCount 1;
        sh:maxCount 1;
        ];

    sh:property [
        sh:path rdfs:comment ;
        sh:name "Description";
        sh:datatype rdf:HTML;
        sh:order 2;
        sh:minCount 1;
        ];   
    
        
